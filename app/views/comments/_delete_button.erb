<%= turbo_frame_tag dom_id(comment, :delete_button) do %>
    <%= button_to "Delete",
        post_comment_path(comment.post.id, comment.id),
        method: :delete,
        form: { data: { turbo: true } },
        class: "block w-full text-left px-4 py-2.5 text-sm text-red-600 hover:bg-red-50 hover:text-red-700 transition rounded-md mx-1",
    role: "menuitem" %>
<% end %>