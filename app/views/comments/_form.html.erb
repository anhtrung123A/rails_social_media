<%= turbo_frame_tag dom_id(@post, :form) do %>
    <%= form_with model: [@post, Comment.new], url: post_comments_path(@post), local: false, class: "flex space-x-3" do |f| %>
    <%= avatar_for(current_user, class: "h-10 w-10 rounded-full") %>
    <div class="flex-1">
        <%= f.text_area :content,
                        placeholder: "Add a comment...",
                        rows: 2,
                        class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none" %>
        <div class="mt-2 flex justify-end">
        <%= f.submit "Comment",
                    class: "inline-block px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-[12px] font-semibold rounded-full hover:from-indigo-700 hover:to-purple-700 transition shadow-sm leading-none" %>
        </div>
    </div>
    <% end %>
<% end %>