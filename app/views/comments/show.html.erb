<div class="max-w-2xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
  <!-- Post Header -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
    <div class="flex items-start space-x-4">
      <%= avatar_for(@post.author, class: "h-10 w-10 rounded-full") %>
      <div class="flex-1">
        <div class="flex items-center space-x-2">
          <strong class="font-semibold text-gray-900"><%= @post.author.full_name %></strong>
          <time class="text-xs text-gray-500">Â· <%= time_ago_in_words(@post.created_at) %> ago</time>
        </div>
        <p class="mt-2 text-gray-900"><%= @post.description %></p>
        <% if @post.images.attached? %>
          <div class="mt-3 rounded-xl overflow-hidden">
            <%= image_tag @post.images.first, class: "w-full h-auto max-h-96 object-cover" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Comments</h2>

    <!-- New Comment Form -->
    <div class="mb-6">
      <%= form_with model: [@post, Comment.new], url: post_comments_path, local: false, class: "flex space-x-3" do |f| %>
        <%= avatar_for(current_user, class: "h-10 w-10 rounded-full") %>
        <div class="flex-1">
          <%= f.text_area :content,
                          placeholder: "Add a comment...",
                          rows: 2,
                          class: "w-full border border-gray-300 rounded-xl p-3 focus:ring-2 focus:ring-indigo-500 focus:outline-none resize-none" %>
          <div class="mt-2 flex justify-end">
            <%= f.submit "Comment",
                         class: "inline-block px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-[12px] font-semibold rounded-full hover:from-indigo-700 hover:to-purple-700 transition shadow-sm leading-none" %>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Comments List -->
    <div id="<%= dom_id(@post, :comments) %>" class="space-y-4">
      <% if @comments.any? %>
        <%= render partial: "comment", collection: @comments, as: :comment %>
      <% else %>
        <p class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
      <% end %>
    </div>
  </div>
</div>