<div class="max-w-2xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
  <!-- Post Header -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 mb-6">
    <div class="flex items-start space-x-4">
        <%= link_to profile_path(@post.author), data: { turbo: false } do %>
            <%= avatar_for(@post.author, class: "h-10 w-10 rounded-full") %>
        <% end %>
      <div class="flex-1">
        <div class="flex items-center space-x-2">
          <strong class="font-semibold text-gray-900"><%= @post.author.full_name %></strong>
          <time class="text-xs text-gray-500">Â· <%= time_ago_in_words(@post.created_at) %> ago</time>
        </div>
        <p class="mt-2 text-gray-900"><%= @post.description %></p>
        <% if @post.images.attached? %>
          <div class="mt-3 rounded-xl overflow-hidden">
            <%= image_tag @post.images.first, class: "w-full h-auto max-h-96 object-cover" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Comments Section -->
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h2 class="text-lg font-bold text-gray-900 mb-4">Comments</h2>

    <!-- In your post show view -->
    <% if current_user %>
      <div class="mb-6" id="new_comment_form">
        <%= render partial: "form", locals: { post: @post } %>
      </div>
    <% end %>

    <!-- Comments List -->
    <div id="<%= dom_id(@post, :comments) %>" class="space-y-4">
      <% if @comments.any? %>
        <%= render partial: "comment", collection: @comments, as: :comment %>
      <% else %>
        <p id="no-comment-display" class="text-gray-500 text-center py-8">No comments yet. Be the first to comment!</p>
      <% end %>
    </div>
  </div>
</div>