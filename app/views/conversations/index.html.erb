<div class="max-w-2xl mx-auto mt-6 px-4 sm:px-6 lg:px-8">
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6">
    <h2 class="text-2xl font-bold text-gray-900 mb-6">Messages</h2>
    
    <% if @conversations.any? %>
      <div class="space-y-4">
        <% @conversations.each do |conversation| %>
          <% # Get the other participant in the conversation %>
          <% other_participant = conversation.other_user(current_user) %>
          
          <%= link_to conversation_path(conversation), class: "block p-4 rounded-lg hover:bg-gray-50 border border-gray-100 hover:border-indigo-200 transition" do %>
            <div class="flex items-center space-x-4">
              <!-- Avatar -->
              <div class="flex-shrink-0">
                <%= avatar_for(other_participant, class: "h-12 w-12 rounded-full object-cover") %>
              </div>
              
              <div class="flex-1 min-w-0">
                <!-- Other participant's name -->
                <p class="text-sm font-semibold text-gray-900 truncate">
                  <%= other_participant.full_name || other_participant.username %>
                </p>
                
                <!-- Last message preview -->
                <% if conversation.messages.any? %>
                  <% last_message = conversation.messages.order(created_at: :desc).first %>
                  <p class="text-sm text-gray-500 truncate">
                    <% if last_message.sender == current_user %>
                      You: 
                    <% else %>
                      <%= last_message.sender.full_name %>: 
                    <% end %>
                    <%= last_message.content.truncate(50) %>
                  </p>
                  <p class="text-xs text-gray-400 mt-1">
                    <%= time_ago_in_words(last_message.created_at) %> ago
                  </p>
                <% else %>
                  <p class="text-sm text-gray-400">No messages yet</p>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center py-16 text-center">
        <svg class="w-16 h-16 text-gray-300 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <p class="text-gray-600 text-lg font-semibold">No conversations yet</p>
        <p class="text-gray-500 text-sm mt-2">Start a conversation with someone to see it here.</p>
      </div>
    <% end %>
  </div>
</div>