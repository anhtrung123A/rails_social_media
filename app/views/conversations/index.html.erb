<div class="max-w-2xl mx-auto mt-6 px-4 sm:px-6 lg:px-8">
  <div class="bg-gradient-to-br from-white to-gray-50 rounded-3xl shadow-xl border border-gray-100 overflow-hidden">
    <div class="p-6 bg-gradient-to-r from-indigo-500 to-purple-600 text-white">
      <h2 class="text-2xl font-bold flex items-center">
        <svg class="w-7 h-7 mr-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        Messages
      </h2>
    </div>
    
    <% if @conversations.any? %>
      <div class="divide-y divide-gray-100">
        <% @conversations.each do |conversation| %>
          <% # Get the other participant in the conversation %>
          <% other_participant = conversation.other_user(current_user) %>
          <% last_message = conversation.messages.order(created_at: :desc).first %>
          
          <%= link_to conversation_path(conversation), class: "block p-5 hover:bg-gradient-to-r hover:from-indigo-50 hover:to-purple-50 transition-all duration-300 group" do %>
            <div class="flex items-center space-x-4">
              <!-- Avatar with online status indicator -->
              <div class="relative flex-shrink-0">
                <%= avatar_for(other_participant, class: "h-14 w-14 rounded-full object-cover ring-2 ring-white shadow-md") %>
                <%= render "shared/activity_status", user: other_participant %>
              </div>
              
              <div class="flex-1 min-w-0">
                <!-- Other participant's name -->
                <div class="flex items-center justify-between">
                  <p class="text-sm font-bold text-gray-900 truncate group-hover:text-indigo-700 transition-colors">
                    <%= other_participant.full_name || other_participant.username %>
                  </p>
                  <% if last_message %>
                    <p class="text-xs text-gray-400">
                      <%= time_ago_in_words(last_message.created_at) %> ago
                    </p>
                  <% end %>
                </div>
                
                <!-- Last message preview -->
                <% if conversation.messages.any? %>
                  <div class="mt-1 flex items-center">
                    <span class="flex-1 min-w-0">
                      <p class="text-sm text-gray-600 truncate">
                        <% if last_message.sender == current_user %>
                          <span class="font-medium text-indigo-600">You:</span> 
                        <% else %>
                          <span class="font-medium text-gray-700"><%= last_message.sender.full_name %>:</span> 
                        <% end %>
                        <%= last_message.content.truncate(50) %>
                      </p>
                    </span>
                    <!-- Unread message indicator -->
                  </div>
                <% else %>
                  <p class="text-sm text-gray-400 mt-1">No messages yet</p>
                <% end %>
              </div>
              
              <!-- Chevron icon -->
              <div class="flex-shrink-0 text-gray-300 group-hover:text-indigo-400 transition-colors">
                <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                </svg>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="flex flex-col items-center justify-center py-20 text-center">
        <div class="bg-gradient-to-r from-indigo-100 to-purple-100 rounded-full p-6 mb-6">
          <svg class="w-16 h-16 text-indigo-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">No conversations yet</h3>
        <p class="text-gray-600 max-w-md">Start a conversation with someone to see it here. Find people in your network and send them a message!</p>
        <div class="mt-6">
          <%= link_to "Find People", users_path, class: "px-6 py-3 bg-gradient-to-r from-indigo-600 to-purple-600 text-white rounded-xl hover:from-indigo-700 hover:to-purple-700 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5" %>
        </div>
      </div>
    <% end %>
  </div>
</div>