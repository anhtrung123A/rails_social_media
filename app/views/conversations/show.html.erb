<div class="max-w-2xl mx-auto mt-6 px-4 sm:px-6 lg:px-8"
     data-controller="conversation"
     data-conversation-conversation-id-value="<%= @conversation.id %>"
     data-current-user-name="<%= current_user.full_name || current_user.username %>"
     data-current-user-avatar="<%= current_user.avatar.present? ? url_for(current_user.avatar) : "https://static.vecteezy.com/system/resources/previews/009/292/244/non_2x/default-avatar-icon-of-social-media-user-vector.jpg" %>"
     >
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100">
    <!-- Conversation Header -->
    <div class="p-4 border-b border-gray-200 flex items-center">
      <% other_participant = @conversation.other_user(current_user) %>
      <%= link_to profile_path(other_participant), class: "flex items-center space-x-3" do %>
        <%= avatar_for(other_participant, class: "h-10 w-10 rounded-full") %>
        <div>
          <h3 class="font-semibold text-gray-900"><%= other_participant.full_name || other_participant.username %></h3>
          <p class="text-sm text-gray-500">Online</p>
        </div>
      <% end %>
    </div>

    <!-- Messages Container -->
    <div data-conversation-target="messagesContainer" class="p-4 h-96 overflow-y-auto">
      <% if @messages.any? %>
        <% @messages.each do |message| %>
          <div class="mb-4 <%= message.sender == current_user ? 'text-right' : 'text-left' %>" 
               id="message_<%= message.id %>">
            <div class="flex <%= message.sender == current_user ? 'justify-end' : 'justify-start' %>">
              <% unless message.sender == current_user %>
                <%= avatar_for(message.sender, class: "h-6 w-6 rounded-full mt-1 mr-2") %>
              <% end %>
              
              <div class="<%= message.sender == current_user ? 'bg-indigo-500 text-white' : 'bg-gray-100 text-gray-900' %> 
                         rounded-2xl px-4 py-2 max-w-xs lg:max-w-md inline-block">
                <p class="text-sm"><%= message.content %></p>
                <p class="text-xs opacity-70 mt-1 <%= message.sender == current_user ? 'text-right text-white' : 'text-gray-500' %>">
                  <%= message.created_at.strftime("%H:%M") %>
                </p>
              </div>
              
              <% if message.sender == current_user %>
                <%= avatar_for(message.sender, class: "h-6 w-6 rounded-full mt-1 ml-2") %>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="flex flex-col items-center justify-center h-full text-center text-gray-500">
          <svg class="w-12 h-12 mb-3" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
          </svg>
          <p class="font-medium">No messages yet</p>
          <p class="text-sm">Start the conversation by sending a message</p>
        </div>
      <% end %>
    </div>

    <!-- Message Form -->
    <div class="p-4 border-t border-gray-200">
      <%= form_with model: @message, 
                    url: conversation_messages_path(@conversation), 
                    method: :post,
                    data: { 
                      conversation_target: "messageForm",
                      action: "submit->conversation#sendMessage"
                    },
                    class: "flex space-x-3" do |f| %>
        <%= f.text_field :content, 
                         placeholder: "Type a message...", 
                         data: { conversation_target: "messageInput" },
                         class: "flex-1 border border-gray-300 rounded-full px-4 py-2 focus:outline-none focus:ring-2 focus:ring-indigo-500" %>
        <%= f.submit "Send", 
                     data: { conversation_target: "sendButton" },
                     class: "bg-indigo-500 text-white rounded-full px-4 py-2 hover:bg-indigo-600 transition" %>
      <% end %>
    </div>
  </div>
</div>