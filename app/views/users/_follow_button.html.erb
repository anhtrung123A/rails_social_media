<%= turbo_frame_tag dom_id(user, :follow_button) do %>
  <% if current_user && user.followers.exists?(id: current_user.id) %>
    <%= link_to "Unfollow", profile_follow_path(user), method: :delete, class: "inline-block px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-[12px] font-semibold rounded-full hover:bg-gray-800 transition shadow-sm leading-none" %>
  <% else %>
      <%= link_to "Follow", profile_follow_path(user), method: :post, class: "inline-block px-5 py-2 bg-gradient-to-r from-indigo-600 to-purple-600 text-white text-[12px] font-semibold rounded-full hover:bg-gray-800 transition shadow-sm leading-none" %>
  <% end %>
<% end %>
