<div class="max-w-2xl mx-auto mt-8 px-4 sm:px-6 lg:px-8">
  <div class="bg-white rounded-2xl shadow-sm border border-gray-100 p-6 sm:p-8">
    <h2 class="text-2xl font-bold text-gray-900 mb-8 flex items-center">
      <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
      </svg>
      Edit Profile
    </h2>

    <%= form_with(model: @user, url: profile_path, local: true, html: { multipart: true, class: "space-y-6" }, data: { turbo: false }) do |f| %>
      <% if @user.errors.any? %>
        <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
          <h3 class="font-medium text-red-800"><%= pluralize(@user.errors.count, "error") %> prohibited this profile from being saved:</h3>
          <ul class="mt-2 list-disc list-inside text-sm text-red-700">
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <!-- Avatar Section — Centered -->
      <div class="flex flex-col items-center gap-6">
        <!-- Avatar Preview -->
        <div class="relative group">
          <%= avatar_for(@user, class: "h-28 w-28 sm:h-32 sm:w-32 rounded-full object-cover ring-4 ring-white shadow-md") %>
          <label class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white text-xs font-bold rounded-full opacity-0 group-hover:opacity-100 transition cursor-pointer"
                 for="user_avatar">
            ✏️
          </label>
          <%= f.file_field :avatar,
                           id: "user_avatar",
                           class: "hidden",
                           data: { action: "change->avatar-preview#preview" } %>
        </div>
      </div>

      <!-- Full Name -->
      <div>
        <%= f.label :full_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :full_name,
                         placeholder: "John Doe",
                         class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:outline-none transition" %>
      </div>

      <!-- Username -->
      <div>
        <%= f.label :username, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_field :username,
                         placeholder: "johndoe",
                         class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:outline-none transition" %>
        <p class="mt-1 text-xs text-gray-500">This is your public @username</p>
      </div>

      <!-- Bio -->
      <div>
        <%= f.label :bio, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.text_area :bio,
                        placeholder: "Tell people about yourself...",
                        rows: 4,
                        class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:outline-none transition resize-none" %>
        <p class="mt-1 text-xs text-gray-500">Max 150 characters. You can @mention people.</p>
      </div>

      <!-- Birthday -->
      <div>
        <%= f.label :birthday, "Birthday", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.date_field :birthday,
                         max: Date.today,
                         class: "block w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-indigo-500 focus:border-transparent focus:outline-none transition" %>
        <p class="mt-1 text-xs text-gray-500">We won’t show your year to others unless you choose to.</p>
      </div>

      <!-- Submit Button -->
      <div class="pt-4">
        <%= f.submit "Save Changes",
                     class: "w-full py-3 px-6 bg-indigo-600 hover:bg-indigo-700 text-white font-semibold rounded-xl shadow-sm hover:shadow transition focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>
  </div>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
        const avatarInput = document.getElementById('user_avatar');
        if (!avatarInput) return;

        avatarInput.addEventListener('change', function(event) {
        const file = event.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        const img = avatarInput.closest('.relative.group').querySelector('img');

        reader.onload = function(e) {
            img.src = e.target.result;
        };

        reader.readAsDataURL(file);
        });
    });
  </script>
</div>